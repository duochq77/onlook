FROM node:20-alpine

WORKDIR /app

# Cài ffmpeg và bash
RUN apk add --no-cache ffmpeg bash

# Copy file cấu hình trước để tối ưu cache
COPY package.json package-lock.json ./
RUN npm install

# Copy toàn bộ mã nguồn
COPY . .

# Build mã TypeScript
RUN npx tsc -p tsconfig.worker.json

# Cấu hình cổng (nếu cần chạy HTTP)
ENV PORT=8080

# Lệnh khởi động worker
CMD node dist/worker/process-video-worker.js
