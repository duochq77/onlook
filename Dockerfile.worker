FROM node:20-alpine

WORKDIR /app

# Cài đặt ffmpeg và bash
RUN apk add --no-cache ffmpeg bash

# Cài đặt các thư viện Node.js
COPY package.json package-lock.json ./
RUN npm install

# Copy toàn bộ mã nguồn và biên dịch TypeScript
COPY . .
RUN npx tsc -p tsconfig.worker.json

# ✅ Khai báo cổng Cloud Run sẽ kiểm tra
EXPOSE 8080

# ✅ Biến môi trường PORT
ENV PORT=8080

# ✅ Lệnh khởi chạy container
CMD ["node", "dist/worker/process-video-worker.js"]
