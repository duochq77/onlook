{
    "compilerOptions": {
        "target": "ES2020", // ✅ Node.js runtime phù hợp
        "module": "CommonJS", // ✅ Cloud Run yêu cầu CommonJS
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "worker/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}