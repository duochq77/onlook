{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "worker",
        "src/dummy-upload-server.ts"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "src/components",
        "src/pages",
        "src/styles",
        "src/services",
        "src/utils"
    ]
}