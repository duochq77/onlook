{
    "compilerOptions": {
        "target": "ES2020", // ✅ Phù hợp Node.js 20+ trên Cloud Run
        "module": "CommonJS", // ✅ Đảm bảo không lỗi exports trong .js
        "moduleResolution": "node",
        "outDir": "dist", // ✅ Tất cả worker sẽ biên dịch ra dist/
        "rootDir": ".", // ✅ Cho phép đọc toàn bộ project gốc
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "worker/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}