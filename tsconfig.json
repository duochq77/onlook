{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "outDir": "dist",
    "noEmit": false,
    "declaration": false,
    "incremental": true
  },
  "include": [
    "worker/**/*.ts",
    "upload-job.ts",
    "upload-video-worker.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "pages",
    "src"
  ]
}
